<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="360.0" prefWidth="240.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dmitriikuzmin.quizspringbootclient.controller.AuthorizationController">
   <children>
      <TextField fx:id="loginTextField" layoutX="30.0" layoutY="90.0" prefHeight="25.0" prefWidth="180.0" />
      <TextField fx:id="passwordTextField" layoutX="30.0" layoutY="150.0" prefHeight="25.0" prefWidth="180.0" />
      <Label layoutX="30.0" layoutY="70.0" text="Login:" />
      <Label layoutX="30.0" layoutY="130.0" text="Password:" />
      <Button layoutX="30.0" layoutY="205.0" mnemonicParsing="false" onAction="#loginButton" prefHeight="25.0" prefWidth="180.0" text="Log in" />
      <Label layoutX="30.0" layoutY="255.0" text="Don't have an account?" />
      <Label layoutX="160.0" layoutY="255.0" onMouseClicked="#signUpLink" text="Sign Up" textFill="#0077ff" underline="true">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
