<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="240.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dmitriikuzmin.quizspringbootclient.controller.RegistrationController">
   <children>
      <Label layoutX="30.0" layoutY="60.0" text="Login:" />
      <TextField fx:id="loginTextField" layoutX="30.0" layoutY="80.0" prefHeight="25.0" prefWidth="180.0" />
      <Label layoutX="30.0" layoutY="120.0" text="Password:" />
      <TextField fx:id="passwordTextField" layoutX="30.0" layoutY="140.0" prefHeight="25.0" prefWidth="180.0" />
      <Label layoutX="30.0" layoutY="180.0" text="First name:" />
      <TextField fx:id="firstNameTextField" layoutX="30.0" layoutY="200.0" prefHeight="25.0" prefWidth="180.0" />
      <Label layoutX="30.0" layoutY="240.0" text="Last name:" />
      <TextField fx:id="lastNameTextField" layoutX="30.0" layoutY="260.0" prefHeight="25.0" prefWidth="180.0" />
      <Button layoutX="30.0" layoutY="313.0" mnemonicParsing="false" onAction="#registerButton" prefHeight="25.0" prefWidth="180.0" text="Register" />
      <Label layoutX="30.0" layoutY="354.0" text="Already have an account?" />
      <Label layoutX="170.0" layoutY="354.0" onMouseClicked="#loginLabel" text="Login" textFill="#0077ff" underline="true">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
   </children>
</AnchorPane>
